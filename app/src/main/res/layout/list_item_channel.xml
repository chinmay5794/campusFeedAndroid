<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="50dip"
    android:weightSum="7"
    android:background="#ffffff">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_launcher"
            android:layout_centerInParent="true"
            android:id="@+id/listItem_iv_channelImage"/>

    </RelativeLayout>

    <View
        android:layout_width="2dip"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:layout_toRightOf="@+id/listItem_tv_followCount"
        android:layout_marginLeft="2dip"
        android:id="@+id/listItem_v_divider_out"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="7"
        android:layout_marginLeft="2dip"
        android:weightSum="3"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/listItem_rlt_channelName"
            android:layout_weight="2"
            android:layout_marginLeft="2dip">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="AstroClub"
                android:textColor="#000000"
                android:textSize="20sp"
                android:layout_centerInParent="true"
                android:id="@+id/listItem_tv_channelName"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/listItem_rlt_channelName">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dip"
                android:layout_weight="1"
                android:layout_alignParentTop="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Followers"
                    android:textColor="#7ec0ee"
                    android:textSize="10sp"
                    android:id="@+id/listItem_tv_followLabel"
                    android:layout_alignParentLeft="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20k"
                    android:textColor="#7ec0ee"
                    android:textSize="10sp"
                    android:layout_toRightOf="@+id/listItem_tv_followLabel"
                    android:layout_marginLeft="2dip"
                    android:id="@+id/listItem_tv_followCount"/>

                <View
                    android:layout_width="1dip"
                    android:layout_height="10dip"
                    android:background="#7ec0ee"
                    android:layout_toRightOf="@+id/listItem_tv_followCount"
                    android:layout_marginLeft="5dip"
                    android:id="@+id/listItem_v_divider"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Views"
                    android:textColor="#7ec0ee"
                    android:textSize="10sp"
                    android:id="@+id/listItem_tv_viewsLabel"
                    android:layout_marginLeft="5dip"
                    android:layout_toRightOf="@+id/listItem_v_divider"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20k"
                    android:textColor="#7ec0ee"
                    android:textSize="10sp"
                    android:layout_marginLeft="2dip"
                    android:layout_toRightOf="@+id/listItem_tv_viewsLabel"
                    android:id="@+id/listItem_tv_viewsCount"/>


            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>